<% if @forums.length > 0 %>
<!--サブカテゴリ-->
<div>
  <table>
    <thead>
    <tr>
      <th>フォーラム</th>
      <th>詳細説明</th>
      <th>スレッド数</th>
      <th>作成日時</th>
    </tr>
    </thead>
    <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= link_to forum.forum_nm, forum_path(id: forum.forum_id) %></td>
        <td><%= forum.detail %></td>
        <td><%= forum.count_all %></td>
        <td><%= forum.create_dttm %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<hr>
<% end %>
<div>
  <%#= form_tag(new_post_path, method: "get") do %>
    <%#= hidden_field_tag "forum_id", @current_forum.forum_id %>
    <%#= submit_tag('スレッド作成') %>
  <%# end %>
  <form action="/posts/new" method="get">
    <input type="hidden" name="forum_id" id="forum_id" value="<%= @current_forum.forum_id %>">
    <input type="submit" value="スレッド作成">
  </form>
</div>

<!--スレッドリスト-->
<div>
  <table class="thread_list">
    <thead>
    <tr>
      <th>タイトル</th>
      <th>コメント</th>
      <th>最新の投稿</th>
      <th>作成日時</th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post.post_id) %></td>
      <td><%= post.r_cnt %></td>
      <td><%= post.recent_dttm %></td>
      <td><%= post.write_dttm %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>