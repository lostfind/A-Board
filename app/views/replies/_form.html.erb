<div class="create">
  <div class="container">
    <div class="form_title">
      <p>コメント作成</p>
    </div>
    <%= form_for @reply do |f| %>
      <%= f.hidden_field :post_id %>
      <%= f.hidden_field :quote_reply_id %>
      <div class="field">
        <%= f.label "名前" %>
        <%= f.text_field :user_id %>
      </div>
      <div class="field">
        <%= f.label "パスワード" %>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <%= f.label "コメント" %>
        <%= f.text_area :content %>
      </div>
      <div class="actions">
        <%= f.submit local_assigns[:submit] %>
        <a href="/posts/<%= @reply.post_id %>"><input type="button" value="キャンセル"></a>
      </div>
    <% end %>
  </div>
</div>